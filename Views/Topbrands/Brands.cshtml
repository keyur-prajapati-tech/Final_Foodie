@{
    Layout = "~/Views/Shared/_foodieheader.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Restaurant Header */
        .restaurant-header h1 {
            font-size: 28px;
            font-weight: bold;
        }

        .cuisine, .location {
            font-size: 16px;
            color: #666;
        }

        .status {
            font-size: 14px;
            margin: 10px 0;
        }

        .open-now {
            color: red;
            font-weight: bold;
        }

        .contact a {
            text-decoration: none;
            color: red;
        }

        /* Action Buttons */
        .action-buttons {
            margin-top: 10px;
        }

            .action-buttons .btn {
                margin-right: 10px;
                border-radius: 20px;
                font-size: 14px;
            }

        /* Ratings */
        .ratings {
            display: flex;
            gap: 20px;
            margin-top: 10px;
        }

        .rating {
            background: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 10px;
            font-size: 14px;
        }

        .dining {
            background: #28a745;
        }

        .delivery {
            background: #007bff;
        }

        /* Gallery */
        .gallery {
            border: 3px solid #000;
            border-radius: 5px;
            display: flex;
            margin-top: 20px;
        }

        .main-image img {
            width: 1050px;
            height:350px;
            padding: 5px;
            border-radius: 10px;
        }

        .thumbnails {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-left: 20px;
        }

            .thumbnails img {
                width: 180px;
                height: 100px;
                padding-top: 10px;
                border-radius: 10px;
            }

        .view-gallery {
            width: 150px;
            height: 100px;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            cursor: pointer;
        }


        .menu-sidebar {
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            border-right: 1px solid #ddd;
            background-color: #fff;
            padding-top: 20px;
        }

            .menu-sidebar a {
                text-decoration: none;
                color: #333;
                display: block;
                padding: 10px 15px;
                border-radius: 5px;
            }

                .menu-sidebar a.active,
                .menu-sidebar a:hover {
                    background-color: #ffebeb;
                    font-weight: bold;
                    color: #d32f2f;
                }

        .menu-content {
            padding: 20px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

            .menu-item img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 10px;
                margin-right: 15px;
            }

        .nav-tabs {
            border-bottom: 2px solid #eee;
        }

            /* Active Tab */
            .nav-tabs .nav-link {
                color: #555;
                font-size: 16px;
                padding: 10px 20px;
            }

                /* Active Tab Highlight */
                .nav-tabs .nav-link.active {
                    font-weight: bold;
                    color: #d32f2f;
                    border-bottom: 3px solid #d32f2f;
                }

        /* Sticky Navbar */
        .sticky-navbar {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1000;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <!-- Restaurant Header -->
        <div class="restaurant-header">
            <h1>mcdonald's</h1>
            <p class="cuisine">Burger, Fast Food, Beverages, Tea, Coffee</p>
            <p class="location">Rustampura, Surat</p>

            <div class="status">
                <span class="open-now">Open now</span> - <span>11am – 2am (Today)</span>
                <span class="contact">📞 <a href="tel:+917875464835">+91 7875464835</a></span>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-outline-primary">📍 Direction</button>
                <button class="btn btn-outline-secondary">🔗 Share</button>
                <button class="btn btn-outline-danger">⭐ Reviews</button>
            </div>

            <!-- Ratings Section -->
            <div class="ratings">
                <span class="rating dining">4.1⭐ <small>346 Dining Ratings</small></span>
                <span class="rating delivery">4.1⭐ <small>18.6K Delivery Ratings</small></span>
            </div>
        </div>

        <!-- Food Gallery -->
        <div class="gallery">
            <div class="main-image">
                <img src="https://b.zmtcdn.com/data/pictures/4/50674/df29559ea6fe65ea656bf5a8d3ee226d.jpg?fit=around|960:500&crop=960:500;*,*" alt="Restaurant Food">
            </div>
            <div class="thumbnails">
                <img src="https://tb-static.uber.com/prod/image-proc/processed_images/e617e655c397cca92624ccffd15e33ac/d24a30ada2fef6c54cef8739d94823b0.jpeg" alt="Food 1">
                <img src="https://res.cloudinary.com/hz3gmuqw6/image/upload/c_fill,q_30,w_750/f_auto/mcdonalds-secret-menu-phpWg6Z67" alt="Food 2">
                <div class="view-gallery">View Gallery</div>
            </div>
        </div>


        @{
            Layout = "~/Views/Shared/_menulistLayout.cshtml";
        }
    </div>


</body>
</html>
