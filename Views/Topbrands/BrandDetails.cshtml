        <!-- Update the Menu Tab section to include the product info button with data attributes -->
        <div class="tab-pane fade" id="menu" role="tabpanel">
            @if (menuItems != null && menuItems.Count > 0)
            {
                <!-- Group by cuisine -->
                var menuGroups = menuItems.GroupBy(m => m.cuisine_name);

                <div class="accordion" id="menuAccordion">
                    @foreach (var group in menuGroups)
                    {
                        string headingId = "heading" + group.Key.Replace(" ", "");
                        string collapseId = "collapse" + group.Key.Replace(" ", "");

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true">
                                    @group.Key (@group.Count())
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse show" aria-labelledby="@headingId" data-bs-parent="#menuAccordion">
                                <div class="accordion-body">
                                    <div class="row">
                                        @foreach (var item in group)
                                        {
                                            <div class="col-md-4 mb-4">
                                                <div class="card h-100">
                                                    @if (!string.IsNullOrEmpty(item.MenuImageBase64))
                                                    {
                                                        <img src="data:image/jpeg;base64,@item.MenuImageBase64"
                                                             class="card-img-top"
                                                             alt="@item.MenuName"
                                                             style="height: 200px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="card-img-top bg-light" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                                            <i class="fas fa-utensils fa-3x text-muted"></i>
                                                        </div>
                                                    }
                                                    <div class="card-body">
                                                        <h5 class="card-title">@item.MenuName</h5>
                                                        <p class="card-text description-truncate">@item.MenuDescription</p>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <span class="text-danger fw-bold">₹@item.Amount</span>
                                                            <button class="btn btn-sm btn-outline-primary product-info-btn"
                                                                    data-bs-toggle="modal" data-bs-target="#productInfoModal"
                                                                    data-name="@item.MenuName"
                                                                    data-description="@item.MenuDescription"
                                                                    data-price="@item.Amount"
                                                                    data-image="@item.MenuImageBase64"
                                                                    data-cuisine="@item.cuisine_name">
                                                                PRODUCT INFO
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">No menu items available for this restaurant.</div>
            }
        </div>

