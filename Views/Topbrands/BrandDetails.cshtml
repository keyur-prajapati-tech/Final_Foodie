@model Foodie.Models.Restaurant.RestaurantInfo
@{
    Layout = "~/Views/Shared/_foodieheader.cshtml";
    var menuItems = ViewBag.MenuItems as List<Foodie.Models.customers.MenuItemViewModel>;
}

<div class="container mt-4 restaurant-detail">
    <!-- Restaurant Header -->
    <div class="row">
        <div class="col-md-4">
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Restaurant_img)"
                 class="img-fluid rounded" alt="@Model.Restaurant_name" style="max-height: 300px;width: 100%;">
        </div>
        <div class="col-md-8">
            <h1>@Model.Restaurant_name</h1>
            <div class="rating mb-3">
                <span class="badge bg-success">@Model.Rating ★</span>
                <span class="text-muted ms-2">(Ratings)</span>
            </div>

            <div class="details-section mt-4">
                <h4>Details</h4>
                <ul class="list-unstyled">
                    <li><i class="fas fa-map-marker-alt"></i> @Model.Address</li>
                    <li><i class="fas fa-phone"></i> @Model.Phone</li>
                    <li><i class="fas fa-envelope"></i> @Model.Email</li>
                    <li><i class="fas fa-calendar-alt"></i> Open @Model.DayOfWeek days a week</li>
                    <li><i class="fas fa-clock"></i> @Model.OpeningTime.ToString(@"hh\:mm") - @Model.ClosingTime.ToString(@"hh\:mm")</li>
                </ul>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs" id="restaurantTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">Overview</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="menu-tab" data-bs-toggle="tab" data-bs-target="#menu" type="button" role="tab">Menu</button>
        </li>
