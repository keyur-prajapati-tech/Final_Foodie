<script>
    $(document).ready(function() {
            // Initialize Bootstrap tabs
            $('#restaurantTabs button').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

              // Product Info Modal Handler
            $(document).on('click', '.product-info-btn', function() {
                // Get data from the button's data attributes
                const name = $(this).data('name');
                const description = $(this).data('description');
                const price = $(this).data('price');
                const image = $(this).data('image');
                const cuisine = $(this).data('cuisine');

                // Set modal content
                $('#modalProductName').text(name);
                $('#modalProductDescription').text(description);
                $('#modalProductPrice').text(price);
                $('#modalProductCuisine').text(cuisine);

                // Set image if available
                if (image) {
                    $('#modalProductImage').attr('src', 'data:image/jpeg;base64,' + image);
                } else {
                    $('#modalProductImage').attr('src', 'https://via.placeholder.com/300x200?text=No+Image');
                }

                // Show the modal
                $('#productInfoModal').modal('show');
            });

                // Initialize when photos tab is clicked
            $('#photos-tab').on('click', function() {
                loadRestaurantPhotos();
            });

            function loadRestaurantPhotos() {
                const restaurantName = '@Model.Restaurant_name';

                // Show loading state
                $('#photosLoading').show();
                $('#photosContainer').empty();
                $('#noPhotos').hide();

                // Load photos
                $.getJSON('/TBrands/GetMenuImages', { restaurantName: restaurantName })
                    .done(function(response) {
                        $('#photosLoading').hide();

                        if (response.success && response.data.length > 0) {
                            // Load cuisines
                            const cuisines = [...new Set(response.data.map(p => p.cuisineName).filter(Boolean))];
                            loadCuisineFilters(cuisines);

                            // Render photos
                            renderPhotos(response.data);
                        } else {
                            $('#noPhotos').show();
                        }
                    })
                    .fail(function() {
                        $('#photosLoading').hide();
                        $('#photosContainer').html(`
                            <div class="col-12">
                                <div class="alert alert-danger">
                                    Failed to load photos. Please try again later.
                                </div>
                            </div>
                        `);
                    });
            }

            function loadCuisineFilters(cuisines) {
                $('#cuisineContainer').empty();

                // Add "All" filter
                $('#cuisineContainer').append(`
                    <button class="btn btn-sm btn-outline-primary active cuisine-filter" data-cuisine="all">
                        All
                    </button>
                `);

                // Add cuisine filters
                cuisines.forEach(cuisine => {
                    $('#cuisineContainer').append(`
                        <button class="btn btn-sm btn-outline-primary cuisine-filter" data-cuisine="${cuisine}">
                            ${cuisine}
                        </button>
                    `);
                });

                // Add filter event handlers
                $('.cuisine-filter').on('click', function() {
                    $('.cuisine-filter').removeClass('active');
                    $(this).addClass('active');
                    filterPhotos($(this).data('cuisine'));
                });
            }

            function renderPhotos(photos) {
                $('#photosContainer').empty();

                photos.forEach(photo => {
                    if (photo.imageBase64) {
                        $('#photosContainer').append(`
                            <div class="col-md-4 col-sm-6 mb-4 photo-item" data-cuisine="${photo.cuisineName || ''}">
                                <div class="card h-100 shadow-sm">
                                    <img src="data:image/jpeg;base64,${photo.imageBase64}"
                                         class="card-img-top photo-image"
                                         alt="${photo.menuName || 'Restaurant photo'}"
                                         style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h6 class="card-title">${photo.menuName || ''}</h6>
                                        ${photo.cuisineName ? `<span class="badge bg-light text-dark">${photo.cuisineName}</span>` : ''}
                                    </div>
                                </div>
                            </div>
                        `);
                    }
                });

                // Initialize search functionality
                $('#photoSearch').on('keyup', function() {
                    const searchTerm = $(this).val().toLowerCase();
                    $('.photo-item').each(function() {
                        const text = $(this).text().toLowerCase();
                        $(this).toggle(text.includes(searchTerm));
                    });
                });
            }

            function filterPhotos(cuisine) {
                if (cuisine === 'all') {
                    $('.photo-item').show();
                } else {
                    $('.photo-item').each(function() {
                        $(this).toggle($(this).data('cuisine') === cuisine);
                    });
                }
            }
    });

    function renderMenu(items) {
        $('#menuContainer').html('');
        items.forEach(function (item) {
            $('#menuContainer').append(`
                <div class="card menu-card shadow-sm">
                    <img src="data:image/png;base64,${item.MenuImageBase64}" class="card-img-top menu-image" />
                    <div class="card-body p-2">
                        <h6 class="card-title mb-0">${item.MenuName}</h6>
                    </div>
                </div>
            `);
        });
    }

        function truncateDescriptions() {
        $('.description-truncate').each(function() {
            const $el = $(this);
            const lineHeight = parseInt($el.css('line-height'));
            const maxHeight = lineHeight * 2; // 2 lines

            if ($el.height() > maxHeight) {
                // If text is overflowing, add ellipsis
                let text = $el.text();
                while ($el.height() > maxHeight && text.length > 0) {
                    text = text.substr(0, text.length - 1);
                    $el.text(text + '...');
                }
            }
        });

        const restaurantName = '@Model.Restaurant_name';

        // Initialize when review tab is clicked
        $('#review-tab').on('click', function() {
            loadRatings();
        });

         // Add review button handler
        $('#addReviewBtn').click(function() {
            // You can implement the review form here
            alert("Implement your review form logic here");
        });

        function loadRatings() {
            // Reset UI
            $('#ratingsLoading').removeClass('d-none').show();
            $('#noReviewsMessage').addClass('d-none');
            $('#ratingsError').addClass('d-none');
            $('#ratingsContainer').empty();

            $.ajax({
                url: '/TBrands/GetUserRating',
                type: 'GET',
                data: { restaurantName: restaurantName },
                dataType: 'json',
                success: function(response) {
                    $('#ratingsLoading').addClass('d-none');

                    if (response.success) {
                        if (response.isEmpty || response.count === 0) {
                            $('#noReviewsMessage').removeClass('d-none');
                        } else {
                            renderReviews(response.data);
                        }
                    } else {
                        showReviewError(response.message || "Failed to load reviews");
                    }
                },
                error: function(xhr) {
                    $('#ratingsLoading').addClass('d-none');

                    let errorMsg = "Failed to load reviews. Please try again.";
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }

                    showReviewError(errorMsg);
                }
            });
        }

        function renderReviews(reviews) {
            let html = '';

            reviews.forEach((review) => {
                const stars = '★'.repeat(review.Rating) + '☆'.repeat(5 - review.Rating);
                const date = new Date(review.CreatedAt);
                const formattedDate = date.toLocaleDateString() + ' at ' +
                                     date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

                html += `
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="card-title mb-0">${review.CustomerName}</h6>
                            <div>
                                <span class="text-warning fs-5">${stars}</span>
                                <small class="text-muted ms-2">${review.Rating}.0</small>
                            </div>
                        </div>
                        <p class="card-text">${review.Description}</p>
                        <small class="text-muted">${formattedDate}</small>
                    </div>
                </div>`;
            });

            $('#ratingsContainer').html(html);
        }

        function showReviewError(message) {
            $('#errorMessage').text(message);
            $('#ratingsError').removeClass('d-none');
        }
        }

    // Call it on load and window resize
    $(window).on('load resize', truncateDescriptions);
</script>
