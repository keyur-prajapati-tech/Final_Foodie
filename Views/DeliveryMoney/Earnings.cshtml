@{
    ViewData["Title"] = "Earnings";
    Layout = ViewBag.Layout ?? "_DeliveryPartnerLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Earnings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #f3f4f6;
            --accent-color: #dbeafe;
            --text-color: #333;
            --success-color: #10b981;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8fafc;
            color: var(--text-color);
        }

        .earnings-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .earnings-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }

            .earnings-card:hover {
                transform: translateY(-5px);
            }

        .earnings-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .earnings-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
            display: flex;
            align-items: center;
        }

            .earnings-title i {
                color: #fbbf24;
                margin-right: 10px;
                font-size: 1.5rem;
            }

        .summary-boxes {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-box {
            background: var(--secondary-color);
            border-radius: 12px;
            padding: 15px;
            text-align: center;
            border-left: 4px solid var(--primary-color);
        }

            .summary-box h3 {
                font-size: 0.9rem;
                color: #6b7280;
                margin-bottom: 10px;
            }

            .summary-box .value {
                font-size: 1.5rem;
                font-weight: 700;
                color: #1f2937;
            }

        .table-container {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .earnings-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .earnings-table thead {
                background-color: #f9fafb;
            }

            .earnings-table th {
                padding: 15px 20px;
                font-weight: 600;
                text-align: left;
                color: #4b5563;
                border-bottom: 1px solid #e5e7eb;
            }

            .earnings-table td {
                padding: 15px 20px;
                border-bottom: 1px solid #e5e7eb;
            }

            .earnings-table tbody tr:last-child td {
                border-bottom: none;
            }

            .earnings-table tbody tr:hover {
                background-color: #f9fafb;
            }

        .amount {
            font-weight: 600;
            color: var(--primary-color);
        }

        .chart-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-top: 30px;
            height: 400px;
        }

        .time-filters {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .time-filter {
            padding: 8px 16px;
            background: var(--secondary-color);
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .time-filter.active {
                background: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
            }

        .total-row {
            background-color: #f8fafc;
            font-weight: 700;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .summary-boxes

        {
            grid-template-columns: repeat(2, 1fr);
        }

        .earnings-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .time-filters {
            margin-top: 15px;
            overflow-x: auto;
            padding-bottom: 5px;
            width: 100%;
        }

        .table-container {
            overflow-x: auto;
        }

        }
    </style>
</head>
<body>
    <div class="earnings-container">
        <!-- Summary Card -->
        <div class="earnings-card">
            <div class="earnings-header">
                <h1 class="earnings-title">
                    <i class="fas fa-wallet"></i> Earnings Overview
                </h1>
                <div class="time-filters">
                    <button class="time-filter">Day</button>
                    <button class="time-filter active">Week</button>
                    <button class="time-filter">Month</button>
                    <button class="time-filter">Year</button>
                </div>
            </div>

            <div class="summary-boxes">
                <div class="summary-box">
                    <h3>This Week</h3>
                    <div class="value">₹9,400</div>
                </div>
                <div class="summary-box">
                    <h3>This Month</h3>
                    <div class="value">₹37,600</div>
                </div>
                <div class="summary-box">
                    <h3>Orders Completed</h3>
                    <div class="value">18</div>
                </div>
                <div class="summary-box">
                    <h3>Avg. per Order</h3>
                    <div class="value">₹522</div>
                </div>
            </div>

            <!-- Earnings Chart -->
            <div class="chart-container">
                <canvas id="earningsChart"></canvas>
            </div>
        </div>

        <!-- Detailed Earnings Table -->
        <div class="earnings-card">
            <div class="earnings-header">
                <h2 class="earnings-title" style="font-size: 1.5rem;">
                    <i class="fas fa-list-alt"></i> Detailed Statement
                </h2>
            </div>

            <div class="table-container">
                <table class="earnings-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Orders</th>
                            <th>Base Pay</th>
                            <th>Tips</th>
                            <th>Bonuses</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>March 10, 2025</td>
                            <td>5</td>
                            <td>₹1,200</td>
                            <td>₹200</td>
                            <td>₹100</td>
                            <td class="amount">₹1,500</td>
                        </tr>
                        <tr>
                            <td>March 11, 2025</td>
                            <td>7</td>
                            <td>₹1,800</td>
                            <td>₹200</td>
                            <td>₹100</td>
                            <td class="amount">₹2,100</td>
                        </tr>
                        <tr>
                            <td>March 12, 2025</td>
                            <td>6</td>
                            <td>₹1,500</td>
                            <td>₹150</td>
                            <td>₹150</td>
                            <td class="amount">₹1,800</td>
                        </tr>
                        <tr>
                            <td>March 13, 2025</td>
                            <td>8</td>
                            <td>₹2,000</td>
                            <td>₹200</td>
                            <td>₹100</td>
                            <td class="amount">₹2,300</td>
                        </tr>
                        <tr>
                            <td>March 14, 2025</td>
                            <td>6</td>
                            <td>₹1,500</td>
                            <td>₹100</td>
                            <td>₹100</td>
                            <td class="amount">₹1,700</td>
                        </tr>
                        <tr class="total-row">
                            <td>Weekly Total</td>
                            <td>32</td>
                            <td>₹8,000</td>
                            <td>₹850</td>
                            <td>₹550</td>
                            <td class="amount">₹9,400</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Make time filter buttons interactive
            const timeFilters = document.querySelectorAll('.time-filter');
            timeFilters.forEach(filter => {
                filter.addEventListener('click', () => {
                    timeFilters.forEach(f => f.classList.remove('active'));
                    filter.classList.add('active');
                });
            });

            // Chart data
            const earningsData = [
                { date: "March 10", earnings: 1500 },
                { date: "March 11", earnings: 2100 },
                { date: "March 12", earnings: 1800 },
                { date: "March 13", earnings: 2300 },
                { date: "March 14", earnings: 1700 }
            ];

            // Initialize chart
            const ctx = document.getElementById("earningsChart").getContext("2d");
            new Chart(ctx, {
                type: "line",
                data: {
                    labels: earningsData.map(d => d.date),
                    datasets: [{
                        label: "Daily Earnings (₹)",
                        data: earningsData.map(d => d.earnings),
                        backgroundColor: "rgba(37, 99, 235, 0.1)",
                        borderColor: "#2563eb",
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: "#ffffff",
                        pointBorderColor: "#2563eb",
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: "#1f2937",
                            titleColor: "#f3f4f6",
                            bodyColor: "#f3f4f6",
                            padding: 12,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return `₹${context.parsed.y.toLocaleString()}`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                display: true,
                                color: "rgba(0, 0, 0, 0.05)"
                            },
                            ticks: {
                                callback: function(value) {
                                    return '₹' + value;
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
