@model Foodie.ViewModels.OTPViewModel
@{
    ViewBag.Title = "Email OTP Verification";
    var otpSent = ViewBag.OTPSent as bool? ?? false;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4">Email OTP Verification</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    @if (!otpSent)
    {
        <!-- Email Form -->
        <form method="post" asp-action="sendemailpage">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" name="Email" class="form-control" id="email" placeholder="Enter your email" required />
            </div>
            <button type="submit" class="btn btn-primary">Send OTP</button>
        </form>
    }
    else
    {
        <!-- OTP Verification Form -->
        <form method="post" asp-action="Verify">
            <div class="mb-3">
                <label for="otp" class="form-label">Enter OTP</label>
                <input type="text" name="otp" class="form-control" id="otp" placeholder="Enter the 6-digit OTP" required />
            </div>
            <button type="submit" class="btn btn-success">Verify</button>
        </form>

        <!-- Resend OTP -->
        <form method="post" asp-action="sendemailpage" class="mt-2">
            <input type="hidden" name="Email" value="@TempData["Email"]" />
            <button type="submit" class="btn btn-link">Resend OTP</button>
        </form>
    }
</div>
