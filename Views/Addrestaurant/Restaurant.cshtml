@model IEnumerable<Foodie.Models.Restaurant.tbl_restaurant>
@{
    Layout = "_AdminLayout";
}
<head>
    <title>@ViewBag.Title</title>
</head>
<div class="text-center">
    <h1>Restaurants</h1>
</div>

<div class="container shadow">
    <div class="border-2">
        <div class="mt-1 mb-1 pt-3 ps-4 pb-3 shadow">
            <a asp-controller="AddRestaurant" asp-action="AddRestaurant"><button type="button" class="btn btn-outline-primary">Add</button></a>
            @*     <button type="button" class="btn btn-outline-primary">Restaurant</button> *@
            @*     <button type="button" class="btn btn-outline-primary">Delivery Boy</button> *@
        </div> 
        <div class="table-responsive border-4">
            <table class="table table-striped table-bordered">
                <thead>

                    <tr>
                        <th scope="col">Restaurant Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Street</th>
                        <th scope="col">Pincode</th>
                        <th scope="col">restaurant approve</th>
                        <th scope="col">restaurant Online</th>
                        <th scope="col">establish</th>
                        <th scope="col">Owner Name</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <th scope="row">@feedback.restaurant_id</th>
                            <td scope="col">@feedback.restaurant_name</td>
                            <td scope="col">@feedback.restaurant_contact</td>
                            <td scope="col">@feedback.restaurant_email</td>
                            <td scope="col">@feedback.restaurant_street</td>
                            <td scope="col">@feedback.restaurant_pincode</td>
                            <td scope="col">@feedback.restaurant_isApprov</td>
                            <td scope="col">@feedback.restaurant_isOnline</td>
                            <td scope="col">@feedback.est_id</td>
                            <td scope="col">@feedback.owner_name</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>