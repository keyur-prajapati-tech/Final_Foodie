@model Foodie.Models.DeliveryPartner.tbl_deliveryPartnerPaymentDetails

@{
    ViewData["Title"] = "Bank & Payment Details - FOODIE";
    Layout = "~/Views/Shared/_DeliverRegisterLayout.cshtml";
}

<style>
    body {
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .container {
        display: flex;
        width: 800px;
        margin:-48px;
        margin-left:-158px;
        margin-right:-78px;
        margin-bottom:1px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border-radius: 10px;
        overflow: hidden;
        
    }

    .sidebar {
        background-color: #3b98ff;
        color: white;
        width: 30%;
        padding: 30px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .sidebar h2 {
            margin-bottom: 15px;
            font-size: 26px;
            font-weight: bold;
        }

        .sidebar p {
            font-size: 14px;
            line-height: 1.6;
        }

    .content {
        background-color: white;
        width: 70%;
        padding: 30px;
    }

    .steps {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .step-item {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin: 0 5px;
        font-weight: bold;
    }

    .step-completed {
        background-color: #4caf50;
        color: white;
    }

    .step-active {
        background-color: #2196f3;
        color: white;
    }

    .step-pending {
        background-color: #e0e0e0;
        color: #9e9e9e;
    }

    .content h2 {
        font-size: 24px;
        margin-bottom: 10px;
        text-align: center;
    }

    .content p {
        color: #666;
        margin-bottom: 30px;
        text-align: center;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 500;
        margin-bottom: 8px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    .radio-group {
        display: flex;
        gap: 20px;
        margin-top: 5px;
    }

    .radio-label {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .radio-input {
        margin-right: 5px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .checkbox-input {
        margin-right: 5px;
    }

    .image-upload {
        border: 2px dashed #ddd;
        border-radius: 4px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        margin-bottom: 10px;
    }

    .image-upload-icon {
        font-size: 24px;
        color: #999;
        margin-bottom: 10px;
    }

    .upload-hint {
        font-size: 12px;
        color: #999;
        margin-bottom: 20px;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 15px;
        border-radius: 4px;
        font-weight: 500;
        cursor: pointer;
        border: none;
    }

    .btn-back {
        background-color: #f5f5f5;
        color: #333;
    }

    .btn-continue {
        background-color: #2196f3;
        color: white;
        display: flex;
        align-items: center;
    }

    .btn-next {
        background-color: #4caf50;
        color: white;
    }

    .input-with-icon {
        position: relative;
    }

    .input-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
    }
</style>

<div class="container">
    <div class="sidebar">
        <h2>FOODIE Delivery</h2>
        <p>Complete your profile to start delivering. We're just a few details away from welcoming you to our team!</p>
    </div>
    <div class="content">
        <div class="steps">
            <div class="step-item step-completed">1</div>
            <div class="step-item step-completed">2</div>
            <div class="step-item step-active">3</div>
            <div class="step-item step-pending">4</div>
        </div>

        <h2>Bank & Payment Details</h2>
        <p>Select your preferred payment method to continue</p>

        <form method="post" asp-action="BankDetails" asp-controller="DeliverSignup">
            <div class="form-group">
                <label class="form-label">Payment Type</label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" id="upi" name="PaymentType" value="UPI" required class="radio-input">
                        UPI
                    </label>
                    <label class="radio-label">
                        <input type="radio" id="bank" name="PaymentType" value="Bank Transfer" class="radio-input">
                        Bank Transfer
                    </label>
                </div>
            </div>

            <!-- UPI ID Field (Hidden by default) -->
            <div class="form-group" id="upiField" style="display: none;">
                <label class="form-label" for="UPI_ID">UPI ID</label>
                <div class="input-with-icon">
                    <input type="text" class="form-control" id="UPI_ID" name="UPI_ID" placeholder="Enter your UPI ID">
                    <span class="input-icon">📱</span>
                </div>
            </div>

            <!-- Bank Fields (Hidden by default) -->
            <div id="bankFields" style="display: none;">
                <div class="form-group">
                    <label class="form-label" for="BankName">Bank Name</label>
                    <input type="text" class="form-control" id="BankName" name="BankName" placeholder="Enter your bank name">
                </div>

                <div class="form-group">
                    <label class="form-label" for="AccountNumber">Account Number</label>
                    <div class="input-with-icon">
                        <input type="text" class="form-control" id="AccountNumber" name="AccountNumber" placeholder="Enter your account number">
                        <span class="input-icon">🔢</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="IFSC_Code">IFSC Code</label>
                    <div class="input-with-icon">
                        <input type="text" class="form-control" id="IFSC_Code" name="IFSC_Code" placeholder="Enter IFSC code">
                        <span class="input-icon">🏦</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" id="IsDefault" name="IsDefault" value="true" class="checkbox-input">
                    Set as Default Payment Method
                </label>
            </div>

            <div class="button-container">
                <button type="button" class="btn btn-back" onclick="window.location.href='@Url.Action("VehicleDetails", "DeliverSignup")'">Back</button>
                <button type="submit" class="btn btn-continue">Continue →</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const paymentTypeInputs = document.querySelectorAll("input[name='PaymentType']");
        const upiField = document.getElementById("upiField");
        const bankFields = document.getElementById("bankFields");

        paymentTypeInputs.forEach(input => {
            input.addEventListener("change", function() {
                if (this.value === "UPI") {
                    upiField.style.display = "block";
                    bankFields.style.display = "none";
                } else {
                    upiField.style.display = "none";
                    bankFields.style.display = "block";
                }
            });
        });
    });
</script>