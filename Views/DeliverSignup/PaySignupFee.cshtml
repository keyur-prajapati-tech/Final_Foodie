@{
    ViewBag.Title = "Pay Signup Fee - FOODIE";
    Layout = "~/Views/Shared/_DeliverRegisterLayout.cshtml";
}

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    function payNow() {
        var options = {
            "key": "rzp_test_A6DIgBxiN6cygo", // Replace with LIVE key in production
            "amount": document.getElementById("amount").value, // Amount in paise (120000 paise = ₹1200)
            "currency": "INR",
            "name": "FOODIE",
            "description": "Signup Fee for Delivery Partner",
            "image": "/images/logo.png",
            "handler": function (response) {
                // Call backend to save payment details
                fetch('/deliverysignup/d/fees?transactionId=' + response.razorpay_payment_id, {
                    method: 'POST'
                })
                .then(res => res.text())
                .then(data => {
                    window.location.href = '/deliverysignup/d/pending';
                })
                .catch(err => {
                    alert("Payment succeeded but server error occurred. Contact support.");
                });
            },
            "prefill": {
                "name": "@ViewBag.FullName",
                "email": "@ViewBag.Email"
            },
            "theme": {
                "color": "#FF5A00"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }
</script>
<style>
    :root {
        --primary-color: #FF5A00;
        --secondary-color: #FFF2EB;
        --text-dark: #333333;
        --text-muted: #757575;
        --border-color: #E0E0E0;
        --success-color: #43A047;
        --background: #F8F9FA;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa, #f7f9fc);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .payment-container {
        width: 100%;
        max-width: 540px;
        padding: 20px;
        margin: 0 auto;
    }

    .payment-card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08);
        padding: 32px;
        width: 100%;
        text-align: left;
    }

    .payment-header {
        display: flex;
        align-items: center;
        margin-bottom: 24px;
    }

    .payment-logo {
        width: 40px;
        height: 40px;
        background-color: var(--primary-color);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 16px;
    }

    .payment-logo-text {
        color: white;
        font-weight: bold;
        font-size: 18px;
    }

    .payment-title {
        font-size: 22px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 10px;
    }

    .payment-desc {
        color: var(--text-muted);
        font-size: 15px;
        line-height: 1.5;
        margin-bottom: 24px;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
    }

    .step {
        flex: 1;
        text-align: center;
        position: relative;
    }

        .step:not(:last-child):after {
            content: '';
            position: absolute;
            top: 16px;
            right: -50%;
            width: 100%;
            height: 2px;
            background-color: var(--border-color);
            z-index: 1;
        }

        .step.active:not(:last-child):after {
            background-color: var(--primary-color);
        }

    .step-dot {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--border-color);
        color: #FFFFFF;
        margin: 0 auto 8px;
        position: relative;
        z-index: 2;
        font-weight: 600;
    }

    .step.active .step-dot {
        background-color: var(--primary-color);
    }

    .step.completed .step-dot {
        background-color: var(--success-color);
    }

    .step-label {
        font-size: 13px;
        color: var(--text-muted);
    }

    .step.active .step-label {
        color: var(--primary-color);
        font-weight: 500;
    }

    .amount-section {
        background-color: var(--secondary-color);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
    }

    .amount-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
    }

        .amount-row:last-child {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px dashed var(--border-color);
            margin-bottom: 0;
        }

    .amount-label {
        color: var(--text-dark);
        font-size: 15px;
    }

    .amount-value {
        font-weight: 600;
        color: var(--text-dark);
        font-size: 15px;
    }

    .total-row .amount-label,
    .total-row .amount-value {
        font-size: 18px;
        color: var(--primary-color);
        font-weight: 700;
    }

    .benefits-section {
        margin-bottom: 24px;
    }

    .benefits-title {
        font-size: 16px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 16px;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
    }

    .benefit-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--secondary-color);
        color: var(--primary-color);
        border-radius: 50%;
        margin-right: 12px;
        font-size: 12px;
    }

    .benefit-text {
        font-size: 15px;
        color: var(--text-muted);
    }

    .btn-pay {
        background: var(--primary-color);
        color: #fff;
        padding: 14px 32px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        font-weight: 600;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .btn-pay:hover {
            background: #E14D00;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 90, 0, 0.2);
        }

    .payment-secure {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
        color: var(--text-muted);
        font-size: 14px;
    }

    .secure-icon {
        width: 18px;
        height: 18px;
        margin-right: 8px;
    }

    .footer-links {
        margin-top: 24px;
        font-size: 14px;
        color: var(--text-muted);
        text-align: center;
    }

        .footer-links a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

            .footer-links a:hover {
                text-decoration: underline;
            }

    .support-link {
        display: inline-flex;
        align-items: center;
        margin-right: 16px;
    }

    .support-icon {
        margin-right: 6px;
    }

    .divider {
        width: 100%;
        height: 1px;
        background-color: var(--border-color);
        margin: 20px 0;
    }

    @@media (max-width: 576px) {
        .payment-card

    {
        padding: 24px 20px;
        border-radius: 12px;
    }

    .progress-steps {
        padding: 0 10px;
    }

    }
</style>

