@using Foodie.Models.DeliveryPartner
@model tbl_deliveryPartnerDetails

@{
    ViewData["Title"] = "Update Profile";
    Layout = ViewBag.Layout ?? "_DeliveryPartnerLayout";
}

<div class="profile-container">
    <h2 class="profile-heading">Update Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="UpdateDetails" method="post" class="profile-form">
        <input type="hidden" asp-for="detail_id" />

        <div class="profile-pic-container">
            <img id="profilePreview" src="@Model.ProfilePicture" alt="Profile Picture" class="profile-pic" />
            <input type="file" id="ProfilePicture" name="ProfilePicture" class="profile-upload" accept=".jpg,.jpeg,.png" onchange="previewImage(event)" />
        </div>
        <div class="form-group">
            <label for="AadhaarNumber">Aadhaar Number</label>
            <input type="text" asp-for="AadhaarNumber" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="PANNumber">PAN Number</label>
            <input type="text" asp-for="PANNumber" class="form-control" required />
        </div>

        <button type="submit" class="btn-update">Update</button>
    </form>
</div>

<style>
    .profile-container {
        width: 40%;
        margin: auto;
        padding: 20px;
        background: #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 12px;
        animation: fadeIn 0.5s ease-in-out;
    }

    .profile-heading {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .profile-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #ff5722;
            box-shadow: 0 0 8px rgba(255,87,34,0.3);
        }

    .profile-pic-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ff5722;
    }

    .profile-upload {
        margin-top: 10px;
        padding: 5px;
        font-size: 14px;
    }

    .btn-update {
        padding: 10px;
        background: #412;
        border: none;
        color: white;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-update:hover {
            background: #e64a19;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function(){
            var output = document.getElementById('profilePreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
