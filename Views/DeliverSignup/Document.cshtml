@{
    ViewData["Title"] = "Document Verification";
    Layout = ViewBag.Layout ?? "_DeliverRegisterLayout"; ;
}
<style>
    body {
        background-color: #f5f5f5;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .main-container {
        display: flex;
        width: 800px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
    }

    .sidebar {
        width: 220px;
        background-color: #4da3ff;
        color: white;
        padding: 30px 20px;
        display: flex;
        flex-direction: column;
    }

    .sidebar-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .sidebar-subtitle {
        font-size: 16px;
        margin-bottom: 10px;
    }

    .sidebar-text {
        font-size: 14px;
        line-height: 1.5;
    }

    .content {
        flex: 1;
        padding: 30px;
    }

    .steps-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 30px;
        gap: 35px;
    }

    .step {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: white;
        font-weight: bold;
        position: relative;
    }

        .step.active {
            background-color: #4da3ff;
        }

        .step.completed {
            background-color: #4caf50;
        }

        .step:not(:last-child):after {
            content: '';
            position: absolute;
            height: 2px;
            width: 35px;
            background-color: #e0e0e0;
            right: -35px;
        }

    .content-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .content-subtitle {
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .upload-box {
        border: 1px dashed #ccc;
        border-radius: 4px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        position: relative;
        height: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .upload-box:hover {
            border-color: #4da3ff;
            background-color: #f9f9f9;
        }

    .upload-icon {
        display: block;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .upload-text {
        font-size: 14px;
        color: #666;
    }

    .form-control {
        opacity: 0;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .continue-btn {
        background-color: #4da3ff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        display: inline-block;
        margin-top: 10px;
    }

        .continue-btn:hover {
            background-color: #3b8ae6;
        }

    .upload-tip {
        font-size: 12px;
        color: #888;
        margin-top: 5px;
    }

    .file-selected {
        color: #4da3ff;
        font-weight: 500;
    }
</style>

<div class="main-container">
    <div class="sidebar">
        <div class="sidebar-title">FOODIE</div>
        <div class="sidebar-subtitle">Delivery</div>
        <div class="sidebar-text">
            Complete your profile to start delivering. We're just a few steps away from welcoming you to our team!
        </div>
    </div>

    <div class="content">
        <div class="steps-container">
            <div class="step completed">1</div>
            <div class="step completed">2</div>
            <div class="step completed">3</div>
            <div class="step active">4</div>
        </div>

        <div class="content-title">Document Verification</div>
        <div class="content-subtitle">Upload your documents to verify your identity</div>

        <form asp-action="Document" asp-controller="DeliverSignup" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label">Upload Aadhaar Card</label>
                <div class="upload-box" id="aadhaar-box">
                    <span class="upload-icon">📄</span>
                    <div class="upload-text">Click to upload your Aadhaar Card</div>
                    <input type="file" class="form-control" id="AadhaarCard" name="AadhaarCard" accept="image/*,application/pdf" required>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Upload PAN Card</label>
                <div class="upload-box" id="pan-box">
                    <span class="upload-icon">📄</span>
                    <div class="upload-text">Click to upload your PAN Card</div>
                    <input type="file" class="form-control" id="PANCard" name="PANCard" accept="image/*,application/pdf" required>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Upload Driving License</label>
                <div class="upload-box" id="license-box">
                    <span class="upload-icon">📄</span>
                    <div class="upload-text">Click to upload your Driving License</div>
                    <input type="file" class="form-control" id="DrivingLicense" name="DrivingLicense" accept="image/*,application/pdf" required>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Upload RC Book</label>
                <div class="upload-box" id="rc-box">
                    <span class="upload-icon">📄</span>
                    <div class="upload-text">Click to upload your RC Book</div>
                    <input type="file" class="form-control" id="RCBook" name="RCBook" accept="image/*,application/pdf" required>
                </div>
            </div>

            <button type="submit" class="continue-btn">Continue</button>
        </form>
    </div>
</div>

<script>
    // Update upload box when files are selected
    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('change', function() {
            const box = this.closest('.upload-box');
            const textDiv = box.querySelector('.upload-text');
            if (this.files.length > 0) {
                textDiv.innerHTML = `<span class="file-selected">Selected: ${this.files[0].name}</span>`;
            }
        });
    });
</script>  