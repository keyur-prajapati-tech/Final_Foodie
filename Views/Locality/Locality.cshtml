<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<script>
    // Initialize carousels
    $(document).ready(function(){
         // Initialize Owl Carousel for categories
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 20,
            nav: true,
            dots: false,
            responsive: {
                0: {
                    items: 2,
                    nav: false
                },
                600: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 5,
                    nav: true
                }
            }
        });
        // Hero carousel
        $('#heroCarousel').carousel({
            interval: 5000,
            pause: "hover"
        });

        // Category carousel
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 20,
            nav: true,
            dots: false,
            responsive: {
                0: {
                    items: 2
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 5
                }
            }
        });

        // Toggle localities visibility
        $('#toggleButton').click(function(){
            $('.d-none').toggleClass('d-block');
            $(this).text(function(i, text){
                return text === "Show More Localities" ? "Show Less" : "Show More Localities";
            });
        });

        // Your existing AJAX code for offers
        let page = 1;
        loadOffers();

        $('#loadMoreBtn').click(function(){
            loadOffers();
        });
    });

    function loadOffers() {
        $('#loadingSpinner').show();
        $('#loadMoreBtn').prop('disabled', true);

        $.ajax({
            type: 'GET',
            url: '/Locality/GetSpecialOffers',
            data: { page: page },
            success: function (data) {
                $('#loadingSpinner').hide();
                $('#loadMoreBtn').prop('disabled', false);

                if (data.length === 0) {
                    $('#loadMoreBtn').hide();
                    if (page === 1) {
                        $('#offerContainer').html('<div class="col-12 text-center py-5"><h5>No offers available at the moment</h5><p class="text-muted">Check back later for new deals!</p></div>');
                    }
                    return;
                }

                data.forEach(offer => {
                    const isNew = new Date(offer.ValidFrom) >= new Date(Date.now() - 7 * 24 * 60 * 60 * 1000);

                    const card = `
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="offer-card h-100">
                            ${isNew ? `<span class="offer-badge">NEW</span>` : ""}
                            <div class="offer-img-container">
                                <img src="${offer.image_}"
                                     onerror="this.onerror=null;this.src='/images/default-offer.jpg';"
                                     alt="${offer.offer_title}">
                            </div>
                            <div class="offer-body">
                                <h5 class="offer-title">${offer.offer_title}</h5>
                                <p class="offer-desc">${offer.offer_desc}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="offer-discount">${offer.percentage_disc}% OFF</span>
                                    <small class="offer-valid">Expires: ${formatDate(offer.validTo)}</small>
                                </div>
                                <a href="/Locality/OfferDetails?so_id=${offer.so_id}" class="btn btn-primary w-100 mt-3">View Details</a>
                            </div>
                        </div>
                    </div>`;
                    $('#offerContainer').append(card);
                });

                page++;
            },
            error: function () {
                $('#loadingSpinner').hide();
                $('#loadMoreBtn').prop('disabled', false);
                $('#offerContainer').html('<div class="col-12 text-center py-5"><h5>Failed to load offers</h5><p class="text-muted">Please try again later</p></div>');
            }
        });
    }

    function formatDate(dateStr) {
        const d = new Date(dateStr);
        if (isNaN(d)) return 'N/A';
        return d.toLocaleDateString('en-IN', {
            day: '2-digit',
            month: 'short'
        });
    }
</script>