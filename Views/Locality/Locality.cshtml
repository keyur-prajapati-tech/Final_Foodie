<!-- Customer Favorites Section -->
<div class="container">
    <div class="section-title">
        <h2>Customer Favorites</h2>
        <p class="section-subtitle">Most loved items in your area</p>
    </div>

    <div class="row g-4">
        @foreach (var menu in Model.topSellingMenus)
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                <div class="product-card"
                     data-bs-toggle="modal"
                     data-bs-target="#menuModal-@menu.MenuId">
                    @if (Model.topSellingMenus.IndexOf(menu) < 3)
                    {
                        <span class="product-badge">
                            Top @(Model.topSellingMenus.IndexOf(menu) + 1)
                        </span>
                    }

                    <div class="product-img-container">
                        @if (!string.IsNullOrEmpty(menu.ImageUrl))
                        {
                            <img src="data:image/jpeg;base64,@menu.ImageUrl"
                                 alt="@menu.MenuName"
                                 loading="lazy">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center h-100">
                                <i class="fas fa-utensils fa-3x text-muted"></i>
                            </div>
                        }
                    </div>

                    <div class="product-body">
                        <h5 class="product-title">@menu.MenuName</h5>
                        <div class="product-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span class="ms-1">(42)</span>
                        </div>
                        <div class="product-price">@menu.TotalRevenue.ToString("C")</div>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="menuModal-@menu.MenuId" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-3 z-index-1"
                                data-bs-dismiss="modal" aria-label="Close"></button>

                        <div class="row g-0">
                            <div class="col-md-6">
                                <div class="h-100 bg-light">
                                    @if (!string.IsNullOrEmpty(menu.ImageUrl))
                                    {
                                        <img src="data:image/jpeg;base64,@menu.ImageUrl"
                                             class="img-fluid w-100 h-100 object-fit-cover"
                                             alt="@menu.MenuName">
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <i class="fas fa-utensils fa-5x text-muted"></i>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-4 h-100 d-flex flex-column">
                                    <div class="mb-3">
                                        <h3 class="mb-1">@menu.MenuName</h3>
                                        <div class="d-flex align-items-center mb-2">
                                            @if (Model.topSellingMenus.IndexOf(menu) < 3)
                                            {
                                                <span class="badge bg-danger me-2">
                                                    Top @(Model.topSellingMenus.IndexOf(menu) + 1) Seller
                                                </span>
                                            }
                                            <div class="text-warning">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star-half-alt"></i>
                                                <span class="text-dark ms-1">(42 reviews)</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between py-2 border-bottom">
                                            <span>Total Sold:</span>
                                            <strong>@menu.TotalQuantitySold</strong>
                                        </div>
                                        <div class="d-flex justify-content-between py-2 border-bottom">
                                            <span>Total Revenue:</span>
                                            <strong class="text-success">@menu.TotalRevenue.ToString("C")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between py-2 border-bottom">
                                            <span>Average Rating:</span>
                                            <strong>4.5/5</strong>
                                        </div>
                                    </div>

                                    <div class="mb-4 flex-grow-1">
                                        <h6 class="small text-uppercase text-muted">Description</h6>
                                        <p class="small mb-0">@menu.MenuDescription</p>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary btn-lg">
                                            <i class="fas fa-cart-plus me-2"></i> Add to Order
                                        </button>
                                        <button class="btn btn-outline">
                                            <i class="fas fa-heart me-2"></i> Add to Favorites
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Popular Localities Section -->
<div class="container localities-section">
    <div class="section-title">
        <h2>Popular Localities in <span class="text-primary">@ViewBag.DisrictName</span></h2>
        <p class="section-subtitle">Find restaurants near you</p>
    </div>

    <div class="row g-4">
        @{
            int count = 0;
        }
        @foreach (var item in Model.Cities)
        {
            <div class="col-md-3 col-sm-6 @(count >= 8 ? "d-none" : "")">
                <div class="locality-card">
                    <h5 class="locality-name">@item.CityName</h5>
                    <p class="locality-count">525 places</p>
                    <div class="d-flex align-items-center mt-2">
                        <div class="text-warning me-1">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <small class="text-muted">(1,240 reviews)</small>
                    </div>
                </div>
            </div>
            count++;
        }
    </div>

    @if (Model.Cities.Count() > 8)
    {
        <div class="toggle-btn">
            <button id="toggleButton" class="btn btn-outline-primary">Show More Localities</button>
        </div>
    }
</div>

<!-- Newsletter Section -->
<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="p-5 rounded-3" style="background-color: #f8f9fa;">
                <h2 class="mb-3">Get Exclusive Offers</h2>
                <p class="mb-4">Subscribe to our newsletter and get 15% off your first order</p>
                <div class="input-group mb-3 mx-auto" style="max-width: 500px;">
                    <input type="email" class="form-control" placeholder="Your email address">
                    <button class="btn btn-primary" type="button">Subscribe</button>
                </div>
                <small class="text-muted">We'll never share your email with anyone else.</small>
            </div>
        </div>
    </div>
</div>

