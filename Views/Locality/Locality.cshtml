@model Foodie.Models.customers.RegisterViewModel

@* Optional Layout *@
@* Layout = "~/Views/Shared/_CustomerLayout.cshtml"; *@

<style>
    .localities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .locality-card {
        background: white;
        border: 2px solid #000;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 5px 3px 5px rgba(0, 0, 0, .9);
        cursor: pointer;
        transition: 0.3s ease-in-out;
        text-align: left;
    }

        .locality-card:hover {
            background: #f7f7f7;
        }

    .hidden {
        display: none;
    }

    .toggle-btn {
        margin-top: 15px;
    }

        .toggle-btn button {
            background: none;
            border: none;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            color: #ff5a5f;
        }

    /* Product Card Styles */
    .product-card {
        transition: all 0.3s ease;
        border-radius: 0.75rem;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .hover-zoom:hover .product-img-container img {
        transform: scale(1.05);
    }

    .product-img-container img {
        transition: transform 0.5s ease;
    }

    /* Modal Styles */
    .modal-content {
        border-radius: 1rem;
        border: none;
    }

    /* Utility Classes */
    .object-fit-cover {
        object-fit: cover;
    }

    .z-index-1 {
        z-index: 1;
    }
</style>

<!-- Section Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Customer Favorites</h2>
    <small class="text-muted">Click any item for details</small>
</div>

<!-- Product Grid -->
<div class="row g-3">
    @foreach (var menu in Model.topSellingMenus)
    {
        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
            <div class="card product-card h-100 border-0 shadow-sm hover-zoom"
                 data-bs-toggle="modal"
                 data-bs-target="#menuModal-@menu.MenuId">
                <!-- Product Badge -->
                @if (Model.topSellingMenus.IndexOf(menu) < 3)
                {
                    <span class="position-absolute top-0 start-0 mt-2 ms-2 badge bg-danger">
                        @(Model.topSellingMenus.IndexOf(menu) + 1) Top
                    </span>
                }

                <!-- Product Image -->
                <div class="product-img-container ratio ratio-1x1">
                    @if (!string.IsNullOrEmpty(menu.ImageUrl))
                    {
                        <img src="data:image/jpeg;base64,@menu.ImageUrl"
                             class="card-img-top object-fit-cover"
                             alt="@menu.MenuName"
                             loading="lazy">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center">
                            <i class="fas fa-utensils fa-3x text-muted"></i>
                        </div>
                    }
                </div>

                <!-- Minimal Info -->
                <div class="card-body p-2 text-center">
                    <h6 class="card-title mb-0 text-truncate">@menu.MenuName</h6>
                    <div class="d-flex justify-content-center mt-1">
                        <small class="text-success fw-bold">@menu.TotalRevenue.ToString("C")</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="menuModal-@menu.MenuId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content overflow-hidden">
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3 z-index-1"
                            data-bs-dismiss="modal" aria-label="Close"></button>

                    <div class="row g-0">
                        <!-- Image Column -->
                        <div class="col-md-6">
                            <div class="h-100 bg-light">
                                @if (!string.IsNullOrEmpty(menu.ImageUrl))
                                {
                                    <img src="data:image/jpeg;base64,@menu.ImageUrl"
                                         class="img-fluid w-100 h-100 object-fit-cover"
                                         alt="@menu.MenuName">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-utensils fa-5x text-muted"></i>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Details Column -->
                        <div class="col-md-6">
                            <div class="p-4 h-100 d-flex flex-column">
                                <!-- Header -->
                                <div class="mb-3">
                                    <h3 class="mb-1">@menu.MenuName</h3>
                                    <div class="d-flex align-items-center mb-2">
                                        @if (Model.topSellingMenus.IndexOf(menu) < 3)
                                        {
                                            <span class="badge bg-danger me-2">
                                                Top @(Model.topSellingMenus.IndexOf(menu) + 1) Seller
                                            </span>
                                        }
                                    </div>
                                </div>

                                <!-- Stats -->
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between py-2 border-bottom">
                                        <span>Total Sold:</span>
                                        <strong>@menu.TotalQuantitySold</strong>
                                    </div>
                                    <div class="d-flex justify-content-between py-2 border-bottom">
                                        <span>Total Revenue:</span>
                                        <strong class="text-success">@menu.TotalRevenue.ToString("C")</strong>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="mb-4 flex-grow-1">
                                    <h6 class="small text-uppercase text-muted">Description</h6>
                                    <p class="small mb-0">@menu.MenuDescription</p>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-lg">
                                        <i class="fas fa-cart-plus me-2"></i> Add to Order
                                    </button>
                                    <button class="btn btn-outline-secondary">
                                        <i class="fas fa-heart me-2"></i> GO TO FOOD DETAIL PAGES
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Special Offers Section -->
<div class="container py-5">
    <h2 class="text-center mb-4">
        🔥 <strong>Special Offers Just for You</strong>
    </h2>

    <div class="row" id="offerContainer">
        <!-- Offers will be loaded here by AJAX -->
    </div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="text-center my-3" style="display:none;">
        <div class="spinner-border text-primary"></div>
    </div>

    <!-- Load More Button -->
    <div class="text-center mt-4">
        <button id="loadMoreBtn" class="btn btn-primary">Load More Offers</button>
    </div>
</div>

<!-- Styles -->
<style>
    .card {
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .card-img-top {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        height: 180px;
        object-fit: cover;
        background-color: #f5f5f5;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .card-text {
        color: #555;
        font-size: 0.95rem;
    }

    .text-success {
        font-size: 1rem;
    }

    .card-body small {
        color: #999;
    }

    .badge-new {
        position: absolute;
        top: 10px;
        left: 10px;
        background: red;
        color: white;
        font-size: 0.75rem;
        padding: 3px 7px;
        border-radius: 5px;
    }
</style>

<!-- Script -->
<script>
    let page = 1;

    function formatDate(dateStr) {
        const d = new Date(dateStr);
        if (isNaN(d)) return 'N/A';
        return d.toLocaleDateString('en-IN', {
            day: '2-digit',
            month: 'short',
            year: 'numeric'
        });
    }

    function loadOffers() {
        $('#loadingSpinner').show();

        $.ajax({
            type: 'GET',
            url: '/Locality/GetSpecialOffers',
            data: { page: page },
            success: function (data) {
                $('#loadingSpinner').hide();

                if (data.length === 0) {
                    $('#loadMoreBtn').hide();
                    if (page === 1) {
                        $('#offerContainer').html('<p class="text-center text-danger">No offers found.</p>');
                    }
                    return;
                }
             
              
                data.forEach(offer => {
                   
                    const isNew = new Date(offer.ValidFrom) >= new Date(Date.now() - 7 * 24 * 60 * 60 * 1000); // 7 days recent
					console.log(offer)
                    const card = `
                    <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                        <div class="card shadow-sm border-0 position-relative h-100">
                            ${isNew ? `<span class="badge-new">NEW</span>` : ""}

                            <img src="${offer.image_}" class="card-img-top"
     onerror="this.onerror=null;this.src='/images/offer_2.jpg';" style="object-fit: contain;" />

                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">${offer.offer_title}</h5>
                                    <p class="card-text">${offer.offer_desc}</p>
                                </div>
                                <div>
                                    <p class="text-success fw-bold mb-1">${offer.percentage_disc}% OFF</p>
                                    <p class="text-muted"><small>Valid_From: ${formatDate(offer.validFrom)} </p>
                                    <p class="text-muted"><small>Valid_To: ${formatDate(offer.validTo)} </p>
                                </div>
                                <div class="mt-auto">
                                    <a href="/Locality/OfferDetails?so_id=${offer.so_id}" class="btn btn-primary read-more-btn">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>`;
                    $('#offerContainer').append(card);
                });

                page++;
            },
            error: function () {
                $('#loadingSpinner').hide();
                alert("Error loading offers.");
            }
        });
    }

    $(document).ready(function () {
        loadOffers();

        $('#loadMoreBtn').click(function () {
            loadOffers();
        });
    });
</script>

<div class="container-fluid mt-4">
    <h2>Popular localities in and around <strong>@ViewBag.DisrictName</strong></h2>

    <div class="container-fluid mt-4">
        <div class="localities-grid">
            @{
                int count = 0;
            }
            @foreach (var item in Model.Cities)
            {
                <div class="locality-card @(count >= 8 ? "hidden" : "")">
                    <p>@item.CityName</p>
                    <span>525 places</span>
                </div>
                count++;
            }
        </div>

        @if (Model.Cities.Count() > 8)
        {
            <div class="toggle-btn">
                <button id="toggleButton">See more ⬇</button>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleButton = document.getElementById("toggleButton");
        const hiddenLocalities = document.querySelectorAll(".hidden");

        let isExpanded = false;

        toggleButton?.addEventListener("click", function () {
            hiddenLocalities.forEach(locality => {
                locality.style.display = isExpanded ? "none" : "block";
            });

            isExpanded = !isExpanded;
            toggleButton.innerHTML = isExpanded ? "See less ⬆" : "See more ⬇";
        });
    });
</script>
