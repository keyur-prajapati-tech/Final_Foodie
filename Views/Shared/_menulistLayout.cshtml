                 function loadCuisines() {
                // Show loading spinner
                $('#loadingSpinner').show();
                $('#cuisineList').hide();

                $.ajax({
                    url: '@Url.Action("GetAllCuisines", "Locality")',
                    type: 'GET',
                    dataType: 'json',
                    success: function(data) {
                        renderCuisines(data);
                    },
                    error: function(xhr, status, error) {
                        console.error("Error loading cuisines:", error);
                        $('#cuisineList').html(
                            '<li class="list-group-item text-danger">Error loading cuisines. Please try again.</li>'
                        ).show();
                    },
                    complete: function() {
                        $('#loadingSpinner').hide();
                    }
                });
            }

            function renderCuisines(cuisines) {
                const $cuisineList = $('#cuisineList');
                $cuisineList.empty();

                if (cuisines.length === 0) {
                    $cuisineList.html(
                        '<li class="list-group-item text-muted">No cuisines found</li>'
                    );
                } else {
                    $.each(cuisines, function(index, cuisine) {
                        $cuisineList.append(
                            `<li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>${cuisine.cuisine_name}</span>
                                <span class="badge bg-secondary rounded-pill">${cuisine.cuisine_id}</span>
                            </li>`
                        );
                    });
                }

                $cuisineList.show();
            }

                // Handle Add to Cart Button click
