        $(document).ready(function () {
            $('#openRegister').click(function (event) {
                event.preventDefault();
                $('#loginModal').modal('hide');
                setTimeout(() => {
                    $('#registerModal').modal('show');
                }, 500);
            });

            $('#openLogin').click(function (event) {
