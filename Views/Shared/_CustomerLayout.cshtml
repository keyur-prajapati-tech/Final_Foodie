                    type: 'POST',
                    data: formData,
                    success: function (res) {
                        if (res.success) {
                            $('#loginModal').modal('hide');

                            Swal.fire({
                                icon: 'success',
                                title: 'Login Successful!',
                                showConfirmButton: false,
                                timer: 1500
                            });

                            setTimeout(function () {
                                window.location.href = res.redirectUrl;
                            }, 1500);
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Login Failed',
                                text: res.message
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong during login.'
                        });
                    }
                });
            });
        });

