</div>

    
    <script>
                   function loadNotifications() {
            fetch('/AddRestaurant/GetPendingRestaurants')
                .then(res => res.json())
                .then(data => {
                    const modalBody = document.querySelector('#notificationModal .modal-body');
                    const badge = document.getElementById('notificationBadge');

                    modalBody.innerHTML = '';

                    if (data.length > 0) {
                        data.forEach(item => {
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-info';
                            alertDiv.innerHTML = `
                                <strong>${item.restaurant_name}</strong><br>
                                Owner: ${item.owner_name}<br>
                                Email: ${item.restaurant_email}<br>
                                Contact: ${item.restaurant_contact}<br>
                                <a href="/VendoreApproval/VendorApproval" class="btn btn-sm btn-primary mt-2">Go to Approve</a>
                            `;
                            modalBody.appendChild(alertDiv);
                        });
                    } else {
                        modalBody.innerHTML = '<div class="alert alert-secondary">No pending restaurants.</div>';
                    }
                     console.log("Updating badge count:", data.length);
                    badge.innerText = data.length;
                })
                .catch(err => {
                    console.error('Error loading notifications:', err);
                });
        }


        // Load notifications on page load
        document.addEventListener('DOMContentLoaded', loadNotifications);

        // Optional: Reload when modal is opened
        document.getElementById('notificationModal').addEventListener('show.bs.modal', loadNotifications);

    </script>


    <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="profileModalLabel">Admin Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="profileForm" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="Full_name" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="Email" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="phone" name="Phone" readonly />
                        </div>

                        <!-- Add this inside the modal body, before the form if needed -->
                        <div class="mb-3">
                            <label class="form-label">Current Profile Image</label><br />
                            <img id="currentProfilePic" src="" class="img-thumbnail" width="150" />
                            <input type="hidden" id="oldImageData" name="OldImage" />
                        </div>

                        <div class="mb-3">
                            <label for="profileImage" class="form-label">Upload New Image</label>
                            <input type="file" class="form-control" id="profileImage" accept=".jpg,.jpeg,.png" name="IMAGE" disabled />
                        </div>

                        <button type="button" class="btn btn-primary" id="editBtn">Edit</button>
                        <button type="submit" class="btn btn-success d-none" id="saveBtn">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('editBtn').addEventListener('click', function () {
            document.getElementById('fullName').removeAttribute('readonly');
            document.getElementById('email').removeAttribute('readonly');
            document.getElementById('phone').removeAttribute('readonly');
            document.getElementById('profileImage').removeAttribute('disabled');

            document.getElementById('editBtn').classList.add('d-none');
            document.getElementById('saveBtn').classList.remove('d-none');
        });

        document.getElementById('profileForm').addEventListener('submit', function (e) {
            e.preventDefault();

            var formData = new FormData(this);

            fetch('/Login/UpdateProfile', {
                method: 'POST',
                body: formData
            }).then(res => {
                if (res.ok) {
                    alert('Profile updated successfully.');
                    location.reload();
                } else {
                    alert('Failed to update.');
                }
            });
        });
    </script>


    <script>
        fetch('/Login/GetProfile')
            .then(response => response.json())
            .then(data => {
                $('#fullName').val(data.full_name);
                $('#email').val(data.email);
                $('#phone').val(data.phone);

                if (data.profilepic) {
                    let imageUrl = `data:image/jpeg;base64,${data.profilepic}`;
                    $('#currentProfilePic').attr('src', imageUrl);
                    $('#oldImageData').val(data.profilepic); // Store it in hidden input
                }
            });

    </script>

