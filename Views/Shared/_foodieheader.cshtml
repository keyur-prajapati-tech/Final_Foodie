        <!-- Tabs Navigation -->
        <div class="tabs-container">
            <div class="tabs">
                <a class="tab @(Context.Request.Path.Value.Contains("Dinningout") ? "active" : "")" 
                   asp-area="" asp-controller="FCollection" asp-action="Dinningout">
                    <img src="https://b.zmtcdn.com/data/o2_assets/30fa0a844f3ba82073e5f78c65c18b371616149662.png" alt="Dining Out">
                    <span>Dining Out</span>
                </a>
                <a class="tab @(Context.Request.Path.Value.Contains("Delivery") ? "active" : "")" 
                   asp-area="" asp-controller="FCollection" asp-action="Delivery">
