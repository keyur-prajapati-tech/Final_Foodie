@{
    Layout = "~/Views/Shared/_RestaurantRegister.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registration Pending</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .approval-box {
            max-width: 500px;
            margin: 100px auto;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            background: #f9fafc;
            text-align: center;
        }

        .approval-icon {
            font-size: 60px;
            color: #ffc107;
        }
    </style>
</head>
<body>


    <div class="approval-box">
        <div class="approval-icon mb-3">
            <i class="bi bi-hourglass-split"></i> <!-- Optional: Bootstrap Icon -->
        </div>
        <h2 class="mb-3 text-warning">Registration Pending</h2>
        <p class="mb-4">
            Thank you for registering your restaurant with <strong>Foodie</strong>. <br>
            Your request is currently under review by our admin team.
        </p>
        <p class="text-muted">
            You’ll be notified via email once your registration is approved. <br>
            If you have questions, please contact support@foodie.com.
        </p>
        <a href="/" class="btn btn-outline-secondary mt-4">Return to Homepage</a>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
