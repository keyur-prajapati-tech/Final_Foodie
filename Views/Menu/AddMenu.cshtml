@{
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Menu</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar1 {
            background: #f8f9fa;
            padding: 15px;
            height: 100vh;
            border-right: 1px solid #ddd;
        }

        .category {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 10px;
            border-radius: 5px;
            background: #fff;
            margin: 5px 0;
            cursor: pointer;
        }

            .category.active {
                background: #e3f2fd;
                font-weight: bold;
            }

        .subcategory {
            padding-left: 20px;
            font-size: 14px;
            color: #555;
        }

        .main-content {
            padding: 15px;
        }

        .menu-list {
            margin-top: 10px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            .menu-item img {
                width: 60px;
                height: 60px;
                border-radius: 10px;
                margin-right: 10px;
            }

        .details h6 {
            margin: 0;
            font-size: 16px;
        }

        .details p {
            margin: 0;
            font-size: 14px;
            color: #555;
        }

    </style>
</head>
<body>
    <hr/>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Categories) -->
            <div class="col-md-3 sidebar1">
                <h6 class="mt-3">Categories (8)</h6>
                <button class="btn btn-link text-primary">+ Add Category</button>

                <div class="category-list">
                    <div class="category active">
                        <span>Litti Chokha (4)</span>
                        <button class="btn btn-sm btn-light">⋮</button>
                    </div>

                    <div class="subcategory">
                        <span>Litti Chokha (4)</span>
                    </div>

                    <button class="btn btn-link text-primary">+ Add Subcategory</button>

                    <div class="category">
