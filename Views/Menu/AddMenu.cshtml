@{
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Menu</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Categories) -->
            <div class="col-md-3 ">
                <h6 class="mt-3">Categories (8)</h6>

                <!-- Button trigger modal -->
                <div class="d-flex justify-content-end my-3">
                    <button type="button" class="btn btn-outline-info">
                        <a class="nav-link active" data-bs-toggle="modal" data-bs-target="#addcate" aria-current="page">+ Add Category</a>
                    </button>
                </div>



                <!-- Modal -->
                <div class="modal fade" id="addcate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color:#dfe3f3;">
                                <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
                                <button type="button" class="btn-close btn" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="category-name">Category Name</label>
                                        <input type="text" class="form-control" id="category-name" placeholder="Enter category name">
                                    </div>

                                    <div class="d-flex justify-content-end align-items-end mt-3">
                                        <button type="submit" class="btn btn-outline-success my-3 w-50">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="category-list">
                    <div class="category active">
                        <span>Litti Chokha (4)</span>
                        <button class="btn btn-sm btn-light">?</button>
                    </div>


                </div>
            </div>

            <!-- Main Content (Menu Items) -->
            <div class="col-md-9 main-content">
                <div class=" d-flex justify-content-end">

                    <button type="button" class="btn btn-outline-info">
                        <a class="nav-link active" data-bs-toggle="modal" data-bs-target="#addItem" aria-current="page">+ Add New Item</a>
                    </button>
                </div>

                <div class="modal fade" id="addItem" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color:#dfe3f3;">
                                <h5 class="modal-title" id="exampleModalLabel">Add Item</h5>
                                <button type="button" class="btn-close btn" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group mb-3">
                                        <label for="category-name">Item Name</label>
                                        <input type="text" class="form-control" id="category-name" placeholder="Enter Item name">
                                    </div>

                                    <div class="dropdown my-3">
                                        <button class="btn btn-outline-primary dropdown-toggle form-control" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Dropdown button
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">Punjabi</a></li>
                                            <li><a class="dropdown-item" href="#">South Indian</a></li>
                                            <li><a class="dropdown-item" href="#">Gujarati Thali</a></li>
                                        </ul>
                                    </div>

                                    <div class="my-3">
                                        <label for="formFile" class="form-label">Upload Your Item Image</label>
                                        <input class="form-control" type="file" id="formFile">
                                    </div>

                                    <div class="form-floating my-3">
                                        <textarea class="form-control" id="floatingTextarea2" style="height: 100px"></textarea>
                                        <label for="floatingTextarea2">Enter Item Decription</label>
                                    </div>

                                    <div class="form-group my-3">
                                        <label for="category-name">Item Price</label>
                                        <input type="text" class="form-control" id="category-name" placeholder="Enter Item Price">
                                    </div>

                                    <div class="d-flex justify-content-end align-items-end">
                                        <button type="submit" class="btn btn-outline-success my-3 w-50">Save</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <!-- Item 1 -->
                    <div class="d-flex align-items-center  p-3">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3" alt="Litti Chokha">
                        <div class="details">
                            <h6 class="m-0 fw-bolder">Litti Chokha</h6>
                            <p class="m-0 fw-light">139 | Customisable</p>
                        </div>
                    </div>
                    <hr />
                    <!-- Item 2 -->
                    <div class="d-flex align-items-center  p-3">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3" alt="Crispy Tawa Fried Litti">
                        <div class="details">
                            <h6 class="m-0 fw-bolder">Crispy Tawa Fried Litti</h6>
                            <p class="m-0 fw-light">179 | Customisable</p>
                        </div>
                    </div>
                    <hr />
                    <!-- Item 3 -->
                    <div class="d-flex align-items-center p-3">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3" alt="Litti Chokha without Ghee Dip">
                        <div class="details">
                            <h6 class="m-0 fw-bolder">Litti Chokha without Ghee Dip</h6>
                            <p class="m-0 fw-light">139 | Customisable</p>
                        </div>
                    </div>
                    <hr />
                    <!-- Item 4 -->
                    <div class="d-flex align-items-center p-3">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3" alt="Sattu Poori">
                        <div class="details">
                            <h6 class="m-0 fw-bolder">Sattu Poori [4 Poori]</h6>
                            <p class="m-0 fw-light">39 | Customisable</p>
                        </div>
                    </div>
                    <hr />

                    <!-- Item 5 -->
                    <div class="d-flex align-items-center p-3 ">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3" alt="Sattu Poori">
                        <div >
                            <h6 class="m-0 fw-bolder">Sattu Poori [4 Poori]</h6>
                            <p class="m-0 fw-light">239 | Customisable</p>
                        </div>
                    </div>

                    <hr/>
                    <!-- Item 6 -->
                    <div class="d-flex align-items-center p-3">
                        <img src="https://www.bharatgangaram.com/wp-content/uploads/2024/01/What-Are-the-Benefits-of-Gujarati-Food-1000x600.jpg" height="60px" class="rounded me-3"  alt="Sattu Poori">
                        <div >
                            <h6 class="m-0 fw-bolder">Sattu Poori [4 Poori]</h6>
                            <p class="m-0 fw-light">139 | Customisable</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
