@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_DeliverRegisterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal | Secure Access</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0062cc;
            --secondary: #6c757d;
            --success: #28a745;
            --dark: #212529;
        }

        body {
            background: linear-gradient(135deg, #141e30, #243b55);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 450px;
            margin: 0 auto;
            padding: 0;
        }

        .card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
            }

        .card-header {
            background: linear-gradient(to right, #0062cc, #0097ff);
            color: white;
            padding: 25px 20px;
            border-bottom: none;
            position: relative;
            overflow: hidden;
        }

            .card-header::before {
                content: "";
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 60%);
                opacity: 0;
                transform: scale(0.5);
                animation: pulse 5s infinite;
            }

        @@keyframes pulse {
            0%

        {
            opacity: 0;
            transform: scale(0.5);
        }

        50% {
            opacity: 0.4;
            transform: scale(1);
        }

        100% {
            opacity: 0;
            transform: scale(0.5);
        }

        }

        .logo-container {
            height: 80px;
            width: 80px;
            margin: 0 auto 15px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .logo-icon {
            font-size: 32px;
            color: #0062cc;
        }

        .card-title {
            margin-bottom: 0;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .card-body {
            padding: 40px 30px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            height: auto;
            background-color: #f8f9fa;
            border: 2px solid #e9ecef;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #0062cc;
                background-color: white;
            }

        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 15px;
            color: #6c757d;
            z-index: 10;
        }

        .form-control {
            padding-left: 45px;
        }

        .btn-login {
            padding: 12px;
            font-size: 18px;
            font-weight: 600;
            border-radius: 8px;
            background: linear-gradient(to right, #0062cc, #0097ff);
            border: none;
            box-shadow: 0 5px 15px rgba(0, 98, 204, 0.4);
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0, 98, 204, 0.6);
                background: linear-gradient(to right, #005bb9, #0088e8);
            }

        .alert {
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 25px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            animation: shake 0.5s;
        }

        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        10%, 30%, 50%, 70%, 90% {
            transform: translateX(-5px);
        }

        20%, 40%, 60%, 80% {
            transform: translateX(5px);
        }

        }

        .powered-by {
            text-align: center;
            margin-top: 25px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 14px;
        }

        /* Floating labels effect */
        .floating-label {
            position: relative;
        }

            .floating-label label {
                position: absolute;
                top: 13px;
                left: 45px;
                color: #6c757d;
                transition: all 0.3s ease;
                pointer-events: none;
            }

            .floating-label input:focus ~ label,
            .floating-label input:not(:placeholder-shown) ~ label {
                top: -10px;
                left: 15px;
                font-size: 12px;
                padding: 0 5px;
                background-color: white;
                color: #0062cc;
                font-weight: 600;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="login-container">
                    <div class="card">
                        <div class="card-header text-center">
                            <div class="logo-container">
                                <i class="fas fa-shield-alt logo-icon"></i>
                            </div>
                            <h3 class="card-title">Admin Portal</h3>
                            <p class="mb-0 mt-2 text-white-50">Welcome Boss We Are Ready To Go</p>
                        </div>
                        <div class="card-body">
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <div>@TempData["Error"]</div>
                                </div>
                            }

                            <form method="post" id="loginForm">
                                <div class="input-group floating-label">
                                    <i class="fas fa-user input-icon"></i>
                                    <input type="text" class="form-control" id="username" name="username" placeholder=" " required>
                                    <label for="username">Username</label>
                                </div>

                                <div class="input-group floating-label">
                                    <i class="fas fa-lock input-icon"></i>
                                    <input type="password" class="form-control" id="password" name="password" placeholder=" " required>
                                    <label for="password">Password</label>
                                </div>

                               @*  <div class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Remember me
                                    </label>
                                    <a href="#" class="float-end text-primary">Forgot password?</a>
                                </div> *@

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-login" id="loginBtn">LOGIN <i class="fas fa-arrow-right ms-2"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="powered-by">
                        <p>Protected by Advanced Security Protocol <i class="fas fa-lock-alt"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Add loading effect to button on click
            $("#loginForm").on("submit", function() {
                $("#loginBtn").html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Authenticating...');
                $("#loginBtn").prop("disabled", true);
            });

            // Subtle background animation
            let angle = 0;
            setInterval(function() {
                angle += 0.1;
                $('body').css('background', 'linear-gradient(' + angle + 'deg, #141e30, #243b55)');
            }, 50);

            // Focus effect
            $(".form-control").focus(function() {
                $(this).parent().addClass("focused");
            }).blur(function() {
                $(this).parent().removeClass("focused");
            });
        });
    </script>
</body>
</html>