@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}
<style>
    /*Review Section Custome Css*/
    .review-container {
        max-width: 800px;
        margin: 20px auto;
    }

    .review-card {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
    }

    .review-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #ccc;
    }

    .review-actions {
        display: flex;
        gap: 15px;
        font-size: 14px;
        color: gray;
    }

    .btn-follow {
        border: 1px solid #ff5757;
        color: #ff5757;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        background: none;
        cursor: pointer;
    }

        .btn-follow:hover {
            background: #ff5757;
            color: #fff;
        }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 15px;
    }

        .pagination .page-item a {
            color: #ff5757;
        }
</style>

<div class="container-fluid">

    <div class="text-center">
        <h1>Reviews </h1>
    </div>


    <div class="container-fluid ">
        <h4>McDonald's Reviews</h4>

        <!-- Review 1 -->
        <div class="review-card card shadow rounded p-3">
            <div class="review-header" >
                <div class="user-info">
                    <div class="user-img"></div>
                    <div>
                        <strong>Krish</strong> <br>
                        <span style="font-size: 12px; color: gray;">0 reviews • 0 Followers</span>
                    </div>
                </div>
                <button class="btn-follow">Follow</button>
            </div>
            <p><span class="badge bg-warning text-dark">DELIVERY</span> 2 days ago</p>
            <p>Free item note added.</p>
            <div class="review-actions">
                <span>👍 Helpful</span>
                <span>💬 Comment</span>
                <span>🔗 Share</span>
            </div>
        </div>

        <!-- Review 2 -->
        <div class="review-card card shadow rounded p-3 mt-3">
            <div class="review-header">
                <div class="user-info">
                    <div class="user-img"></div>
                    <div>
                        <strong>Nisarg Shroff</strong> <br>
                        <span style="font-size: 12px; color: gray;">0 reviews • 7 Followers</span>
                    </div>
                </div>
                <button class="btn-follow">Follow</button>
            </div>
            <p><span class="badge bg-warning text-dark">DELIVERY</span> 3 days ago</p>
            <p>Received order after one and half hour.</p>
            <div class="review-actions">
                <span>👍 Helpful</span>
                <span>💬 Comment</span>
                <span>🔗 Share</span>
            </div>
        </div>

        <!-- Pagination -->
        <nav>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
            </ul>
        </nav>
    </div>

</div>
