@model IEnumerable<Foodie.Models.Restaurant.tbl_special_offers>
@{
    ViewData["Title"] = "Special Offers";
}
<h2>Special Offers</h2>

<form method="get" asp-action="offers">
    <input type="text" name="SearchTerm" placeholder="Search offers..." />
    <button type="submit">Search</button>
</form>

<a asp-action="AddOffers" class="btn btn-success my-2">Add New Offer</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Discount</th>
            <th>Valid From</th>
            <th>Valid To</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.OfferTitle</td>
                <td>@offer.OfferDesc</td>
                <td>@offer.PercentageDisc %</td>
                <td>@offer.ValidFrom.ToShortDateString()</td>
                <td>@offer.ValidTo.ToShortDateString()</td>
                <td>
                    <img src="@Url.Content(offer.ImagePath)" width="100" />
                </td>
                <td>
                    <a asp-action="EditOffers" asp-route-id="@offer.SoId" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteOffers" asp-route-id="@offer.SoId" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
