@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Summary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
         .download-toast {
            position: fixed;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1050;
            background: #dfe3f3;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.9);
            padding: 20px;
            text-align: center;
            width: 300px;
            display: none; /* Initially hidden */
        }

        .download-icon {
            font-size: 30px;
            color: green;
            margin-bottom: 10px;
        }

        .download-link {
            color: #000;
            font-weight: 600;
            text-decoration: underline;
            cursor: pointer;
            width: 80px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid mt-4">
        <!-- Content -->
        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="live">
                <h4>📊 Customer Experience</h4>
                <div class="row">
                    <div class="col-md-6">
                        <canvas id="ratingsChart" height="100"></canvas>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-bordered table-striped" id="performanceTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Metric</th>
                                    <th>%</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="container-fluid mt-3">
        <div class="d-flex justify-content-between align-items-center mt-2">
            <h4>📈 Business Reports - Customer Experience</h4>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="container-fluid d-flex justify-content-end ">
                    <!-- Download Button -->
                    <button class="btn btn-outline-info" id="downloadBtn">Download</button>
                    <!-- Download Popup -->
                    <div class="download-toast" id="popup">
                        <div class="download-icon">
                            <i class="bi bi-download"></i> <!-- Bootstrap Icon -->
                        </div>
                        <div class="mb-2">
                            Download Bussiness Report from <strong>1st Nov</strong> to <strong>3rd Nov</strong>
                        </div>
                        <div>
                             <a href="#" class="download-link">Download now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Bar Chart -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h6>Rated Orders & Average Rating</h6>
                    <canvas id="barChart"></canvas>
                </div>
            </div>

            <!-- Line Chart -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h6 class="card-title">Bad Orders Overview</h6>
                    <canvas id="badOrdersChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
           document.getElementById("downloadBtn").addEventListener("click", function () {
            document.getElementById("popup").style.display = "block";
            setTimeout(() => {
                document.getElementById("popup").style.display = "none";
            }, 5000);
        });


        // Bar Chart
        new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri'],
                datasets: [{
                    label: 'Rated Orders',
                    data: [12, 19, 14, 17, 22],
                    backgroundColor: '#0d6efd'
                }, {
                    label: 'Avg Rating',
                    data: [1.4, 2.1, 1.2, 2.4, 2.9],
                    type: 'line',
                    borderColor: '#ffc107',
                    fill: false
                }]
            }
        });
        
    </script>
    <script>
        $(function () {
           $.ajax({ 
            url: '@Url.Action("GetPerformanceMetrics", "OrderHistory")',
            method: 'GET',
            success: function(data) {
                if (typeof data === "string") {
                    data = JSON.parse(data);
                }
                const tbody = $('#performanceTable tbody');
                tbody.empty();
                if (Array.isArray(data)) {
                    $.each(data, function(index, item) {
                        tbody.append(`<tr><td>${item.Metric ?? item.metric}</td><td>${item.Value ?? item.value}%</td></tr>`);
                    });
                } else {
                    console.warn("Data is not an array:", data);
                }
            },
            error: function(xhr, status, error) {
                alert('Failed to load performance metrics.');
            }
        });


        });
    </script>
    <script>
        // Bad Orders Chart AJAX
        $(document).ready(function () {
            $.ajax({
                url: '/OrderHistory/GetBadOrderStats',
                method: 'GET',
                success: function (data) {
                    const labels = data.map(x => x.weekLabel);
                    const badOrders = data.map(x => x.badOrders);
                    const delayedOrders = data.map(x => x.delayedOrders);
                    const completedOrders = data.map(x => x.completedOrders);

                    const ctx = document.getElementById('badOrdersChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [
                                {
                                    label: 'Rejected Orders',
                                    data: badOrders,
                                    borderColor: 'red',
                                    borderWidth: 2,
                                    fill: false
                                },
                                {
                                    label: 'Delayed Orders',
                                    data: delayedOrders,
                                    borderColor: 'orange',
                                    borderWidth: 2,
                                    fill: false
                                },
                                {
                                    label: 'Completed Orders',
                                    data: completedOrders,
                                    borderColor: 'purple',
                                    borderWidth: 2,
                                    fill: false
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top'
                                }
                            }
                        }
                    });
                }
            });

            // ✅ Ratings Chart AJAX
            $.ajax({
                url: '/OrderHistory/GetWeeklyRatings',
                method: 'GET',
                success: function (data) {
                    const labels = data.map(x => x.weekLabel);
                    const ratings = data.map(x => x.averageRating);

                    const ctx = document.getElementById('ratingsChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Customer Ratings',
                                data: ratings,
                                borderColor: '#007bff',
                                backgroundColor: 'transparent',
                                borderWidth: 3,
                                pointRadius: 5,
                                pointBackgroundColor: '#007bff',
                                fill: false
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    min: 0.0,
                                    max: 5.0,
                                    title: {
                                        display: true,
                                        text: 'Average Rating'
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    position: 'top'
                                }
                            }
                        }
                    });
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
