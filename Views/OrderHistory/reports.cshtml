@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Summary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">

    <div class="container mt-4">
        <!-- Tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#live">Live Tracking</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#reports">Business Reports</a>
            </li>
        </ul>

        <!-- Content -->
        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="live">
                <h4>📊 Customer Experience</h4>
                <div class="row">
                    <div class="col-md-6">
                        <canvas id="lineChart"></canvas>
                    </div>
                    <div class="col-md-6">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Metric</th>
                                    <th>%</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Rejected Orders</td>
                                    <td>0%</td>
                                </tr>
                                <tr>
                                    <td>Delayed Orders</td>
                                    <td>7.1%</td>
                                </tr>
                                <tr>
                                    <td>Poor Rated Orders</td>
                                    <td>0%</td>
                                </tr>
                                <tr>
                                    <td>Complaints</td>
                                    <td>0%</td>
                                </tr>
                                <tr>
                                    <td>Online %</td>
                                    <td>94.68%</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>📈 Business Reports - Customer Experience</h4>
            <div>
                <button class="btn btn-outline-primary">Download</button>
                <select class="form-select d-inline-block w-auto">
                    <option>Ghar Ka Zaika</option>
                    <option>Outlet 2</option>
                </select>
            </div>
        </div>

        <div class="row">
            <!-- Bar Chart -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h6>Rated Orders & Average Rating</h6>
                    <canvas id="barChart"></canvas>
                </div>
            </div>

            <!-- Line Chart -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h6>Bad Orders Overview</h6>
                    <canvas id="multiLineChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('lineChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'Customer Ratings',
                    data: [3.5, 4.0, 4.2, 3.9],
                    borderColor: '#007bff',
                    fill: false
                }]
            },
            options: {
                responsive: true,
            }
        });


        // Bar Chart
        new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri'],
                datasets: [{
                    label: 'Rated Orders',
                    data: [12, 19, 14, 17, 22],
                    backgroundColor: '#0d6efd'
                }, {
                    label: 'Avg Rating',
                    data: [1.4, 2.1, 1.2, 2.4, 2.9],
                    type: 'line',
                    borderColor: '#ffc107',
                    fill: false
                }]
            }
        });

        // Multi Line Chart
        new Chart(document.getElementById('multiLineChart'), {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [
                    {
                        label: 'Bad Orders',
                        data: [12, 15, 8, 20],
                        borderColor: 'red',
                        fill: false
                    },
                    {
                        label: 'Delayed Orders',
                        data: [5, 7, 4, 6],
                        borderColor: 'orange',
                        fill: false
                    },
                    {
                        label: 'Rejected Orders',
                        data: [1, 3, 0, 2],
                        borderColor: 'purple',
                        fill: false
                    }
                ]
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
