    <title>Restaurant Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Page Styling */
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        /* Filter Buttons */
        .filters {
            display: flex;
            gap: 10px;
        }

        .filter-btn {
            border: 1px solid #ccc;
            background: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .filter-btn.active {
                background: black;
                color: white;
            }

            .filter-btn.veg-meal {
                background: #ff4d4d;
                color: white;
            }

        .close {
            margin-left: 5px;
            cursor: pointer;
        }

        /* Promotional Banner */
        .promo-banner {
            display: flex;
            align-items: center;
            background: #111;
            color: white;
            border-radius: 15px;
            overflow: hidden;
            padding: 30px;
        }

        .promo-content {
            flex: 1;
            padding: 20px;
        }

            .promo-content h2 {
                font-size: 32px;
                font-weight: bold;
            }

        .highlight {
            font-size: 40px;
            font-weight: bold;
            color: #ff4d4d;
        }

        .promo-btn {
            background: #ff4d4d;
            border: none;
            padding: 10px 15px;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
            transition: 0.3s;
        }

            .promo-btn:hover {
                background: #cc0000;
            }

        .promo-image img {
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
        }

        /* Restaurant Grid */
        .restaurant-grid {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .restaurant-card {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
        }

            .restaurant-card img {
                width: 100%;
                border-radius: 10px;
            }

        .status {
            font-weight: bold;
        }

            .status.open {
                color: red;
            }

            .status.closing {
                color: orange;
            }

        h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .accordion-button {
            font-weight: bold;
        }

        .accordion-item {
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 10px;
        }


        /*-------------------------------------------------mycss-----------------------------*/
        filters {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .filter-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 15px;
            font-size: 14px;
            cursor: pointer;
        }

        .active-filter {
            background: #e74c3c;
            color: white;
        }

        .thali-container {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
        }

        .thali-card {
            border-radius: 10px;
            overflow: hidden;
            background: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
        }

            .thali-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .thali-content {
            padding: 10px;
        }

        .thali-name {
            font-weight: bold;
            font-size: 16px;
        }

        .thali-info {
            font-size: 13px;
            color: #777;
            margin: 5px 0;
        }

        .price {
            font-size: 14px;
            font-weight: bold;
            margin-top: 5px;
        }

        .rating {
            background: green;
            color: white;
            font-size: 12px;
            padding: 3px 8px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            right: 10px;
        }

        .discount-badge {
            background: blue;
            color: white;
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 5px;
            position: absolute;
            top: 10px;
            left: 10px;
        }
    </style>
</head>
