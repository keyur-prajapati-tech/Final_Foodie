@model IEnumerable<Foodie.Models.customers.tbl_customer>
@{
    Layout = "_AdminLayout";
}
<head>
    <title>@ViewBag.Title</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Customers</h1>
        
    </div>

    <!-- Table Card -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Customer List</h5>
           
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-striped mb-0 text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Customer ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Profile</th>
                            <th scope="col">DOB</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Updated At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <th scope="row">@emp.customer_id</th>
                                <td>@emp.customer_name</td>
                                <td>@emp.phone</td>
                                <td>@emp.email</td>
                                <td>@emp.Gender</td>
                                <td>
                                    @if (emp.profilepic != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(emp.profilepic)" width="50" height="50" class="rounded-circle" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No profile Img</span>
                                    }
                                </td>
                                <td>@emp.DOB</td>
                                <td>@emp.created_at</td>
                                <td>@emp.updated_at</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // You can add JavaScript for additional interactivity if necessary
</script>
