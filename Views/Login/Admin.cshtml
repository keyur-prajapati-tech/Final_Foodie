@model IEnumerable<Foodie.Models.tbl_admin>
@{
    Layout = "_AdminLayout";
}

<head>
    <title>@ViewBag.Title</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Admin List</h1>
        
    </div>

    <!-- Admin List Card -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Admins</h5>
            <a asp-controller="Login" asp-action="AddAdmin" class="btn btn-outline-secondary">
                <i class="bi bi-person-plus-fill"></i> Add Employee
            </a>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-striped mb-0 text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Admin Id</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Role Type</th>
                            <th scope="col">Image</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            <tr>
                                <th scope="row">@admin.admin_id</th>
                                <td>@admin.Full_name</td>
                                <td>@admin.Email</td>
                                <td>@admin.Phone</td>
                                <td>@admin.role_type</td>
                                <td>
                                    @if (admin.IMAGE != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(admin.IMAGE)" width="50" height="50" class="rounded-circle" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No profile Img</span>
                                    }
                                </td>
                                <td>@admin.CreatedAt</td>
                                <td>@admin.LastLogin</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

