                    <div class="item text-center">
                        <a asp-controller="TBrands" asp-action="Brands">
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Restaurant_img)" class="rounded" alt="@item.Restaurant_name" style="width: 200px; height: 150px; margin-left: 3px;" />
                        </a>
                        <p class="mt-2">@item.Restaurant_name</p>
                        <span>@item.DayOfWeek days open</span>
                    </div>
                }
            </div>
        }
        else if (Model.Count() == 1)
        {
            <div class="text-center mt-3">
                <a asp-controller="TBrands" asp-action="Brands">
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.First().Restaurant_img)" alt="@Model.First().Restaurant_name" style="width:150px; height:100px; object-fit:cover;" />
                </a>
                <p class="mt-2">@Model.First().Restaurant_name</p>
                <span>@Model.First().DayOfWeek days open</span>
            </div>
        }
        else
        {
            <p class="text-muted text-center">No brands available.</p>
        }
